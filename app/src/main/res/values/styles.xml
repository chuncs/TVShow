<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_800</item>
        <item name="colorAccent">@color/orange_a400</item>

        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>
